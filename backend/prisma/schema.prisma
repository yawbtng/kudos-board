generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id Int @id @default(autoincrement())
  title String
  category String
  author String
  pinned Boolean  @default(false)
  date DateTime
  image String
  cards Card[] 
}

model Card {
  id Int @id @default(autoincrement())
  title String
  description String
  gif_url String
  owner String
  vote_cnt Int
  boardId Int
  board Board @relation(fields: [boardId], references: [id])
  date DateTime 
}